<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">

    <EditText
        android:id="@+id/headerDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/snoopy"
        app:layout_constraintBottom_toTopOf="@+id/mainFragment"
        app:layout_constraintEnd_toStartOf="@id/searchButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/searchButton"
        android:text="@string/search"
        android:onClick="fetchGifs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mainFragment"
        app:layout_constraintStart_toEndOf="@id/headerDiv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/mainFragment"
        app:layout_constraintTop_toBottomOf="@+id/headerDiv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="com.example.android.giphyapi.View.MainFragment"/>


</androidx.constraintlayout.widget.ConstraintLayout>